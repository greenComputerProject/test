<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapeer 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.green.mapper.BoardMapper">
	<sql id="criteria">
		<trim prefix="(" suffix=") AND  " prefixOverrides="OR">
			<foreach item="type" collection="typeArr">
				<trim prefix="OR">
					<choose>
						<when test="type=='T'.toString()">
							title like '%'||#{keyword} ||'%'
						</when>
						<when test="type=='C'.toString()">
							content like '%'||#{keyword} ||'%'
						</when>
						<when test="type=='W'.toString()">
							writer like '%'||#{keyword} ||'%'
						</when>
					</choose>
				</trim>
			</foreach>
		</trim>
	</sql>

	<select id="getList" resultType="com.green.domain.QnaVO">
		<![CDATA[
			select * from tbl_qna where qna_no >0
		]]>
	</select>
	<select id="getTotalCount" resultType="int">
			select count(*) from tbl_qna where
			<include refid="criteria"></include>
			 qna_no >0
	</select>
	
	<insert id ="insert">
		insert into tbl_qna(qna_no, qna_title, qna_content, qna_regdate, userid)
			values(seq_qna.nextval, #{qna_title}, #{qna_content}, sysdate, #{userid})
	</insert>
	
	<select id="read" resultType="com.green.domain.QnaVO">
		select * from tbl_qna where qna_no = #{qna_no}
	</select>
	<delete id="delete" parameterType="long">
		delete from tbl_qna where qna_no = #{qna_no}
	</delete>
	
</mapper>